{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "moduleResolution": "Node16",

    "strict": true,
    "noImplicitAny": false,

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    "resolveJsonModule": true,
    "isolatedModules": true,

    "useUnknownInCatchVariables": false
  }
}
